{
  "name": "bolt-market-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Bolt Market (web + server)",
  "type": "module",
  "workspaces": [
    "web",
    "server"
  ],
  "scripts": {
    "dev": "npm --prefix web run dev",
    "build": "npm --prefix web run build",
    "preview": "npm --prefix web run preview",
    "lint": "npm --prefix web run lint",
    "format": "npm --prefix web run format",
    "server:start": "npm --prefix server run start",
    "server:dev": "npm --prefix server run dev",
    "install:all": "npm install && npm --prefix web install && npm --prefix server install",
    "reorg:move-files": "powershell -ExecutionPolicy Bypass -File move-files.ps1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.0",
    "vite": "^5.4.21"
  }
}
